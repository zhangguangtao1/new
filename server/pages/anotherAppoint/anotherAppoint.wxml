<!--pages/appoint/appoint.wxml-->
<!-- 预约类型 -->
<view class='appointCase'>
  <view class='appointItem'>
    <text>标题：</text>抽油烟机深度清洁服务</view>
  <view class='appointItem'>
    <text>价钱：</text>¥200</view>
</view>

<form class='form'>
  <view class='formItem'>
    <text>姓名</text>
    <input type='text' placeholder='请输入姓名'></input>
  </view>
  <view class='formItem'>
    <text>电话</text>
    <input type='text' placeholder='请输入手机号码'></input>
  </view>

  <view class='formItem'>
    <view class='getCode' bindtap='getCode'>
      <text wx:if="{{isShow}}">获取验证码</text>
      <text wx:else> {{isGet?allSeconds+"s":"重新获取验证码"}}</text>
    </view>
    <input type='text' placeholder='请输入验证码'></input>

  </view>

  <view class='formItem'>
    <text>留言</text>
    <textarea placeholder='请输入留言'></textarea>
  </view>
  <button class='submitBtn'>提交</button>
</form>