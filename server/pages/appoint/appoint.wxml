<!--pages/appoint/appoint.wxml-->
<image class='appointImg' src='../../images/appoint.png'></image>
<form class='form'>
  <view class='formItem'>
    <text>姓名</text>
    <input type='text' placeholder='请输入姓名'></input>
  </view>
  <view class='formItem'>
    <text>电话</text>
    <input type='text' placeholder='请输入手机号码'></input>
  </view>
  <view class='formItem'>
    <text>预约项目</text>
    <picker bindchange="bindPickerChange" value="{{index}}" range="{{array}}">
      <view class="picker">
        <view wx:if='{{index == -1}}'>请选择</view> {{array[index]}}
      </view>
    </picker>
  </view>
  <view class='formItem'>
    <text>留言</text>
    <textarea placeholder='请输入留言'></textarea>
  </view>
  <button class='submitBtn'>提交</button>
</form>